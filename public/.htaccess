RewriteEngine On
RewriteBase /HB/

# ================================
# 1) NÃO REESCREVER O CMS (PHP)
# ================================
RewriteRule ^m2-cms/ - [L]

# ================================
# 2) NÃO REESCREVER ASSETS
# ================================
RewriteRule ^assets/ - [L]

# ================================
# 3) SE EXISTIR ARQUIVO OU PASTA REAL, ENTREGA NORMAL
# ================================
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# ================================
# 4) TODAS AS ROTAS DO REACT
# ================================
RewriteRule . /HB/index.html [L]
